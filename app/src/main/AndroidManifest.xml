<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.forwarzz.tpone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TPone">

        <activity android:name="fr.forwarzz.tpone.CreateContactActivity" android:parentActivityName="fr.forwarzz.tpone.MainActivity" />
        <activity android:name="fr.forwarzz.tpone.ContactInfoActivity" android:theme="@style/Theme.TPone.NoActionBar" android:parentActivityName="fr.forwarzz.tpone.MainActivity" />
        <activity android:name="fr.forwarzz.tpone.MainActivity" android:launchMode="singleTop" />
        <activity android:name="fr.forwarzz.tpone.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>